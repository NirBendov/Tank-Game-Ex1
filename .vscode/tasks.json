        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file + InputHandler",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/file_handlers/InputHandler.cpp",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
